@model Student_info

@{
    ViewData["Title"] = "แก้ไขชื่อนักเรียน";
}

<h1> แก้ไขข้อมูลนักเรียน </h1>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<form asp-controller="Student_info" asp-action="Editstudent" method="post">
    <div class="form-group row">

        <input type="hidden" name="ID" value="@Model.ID" />
        <label asp-for="Fname" class="col-2">ชื่อ</label>

        <div class="col-6">
            <input asp-for="Fname" class="form-control" placeholder="Required">

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Lname" class="col-2">นามสกุล</label>

        <div class="col-6">
            <input asp-for="Lname" class="form-control">

        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Email" class="col-2">อีเมลล์</label>

        <div class="col-6">
            <input asp-for="Email" class="form-control">

        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Tel" class="col-2">เบอร์โทรศัพท์</label>

        <div class="col-6">
            <input asp-for="Tel" class="form-control">

        </div>
    </div>


    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>

<form asp-controller="Student_info" asp-action="Back_toHome">
    <button name="submit" type="submit" class="btn btn-primary">Back</button>
</form>

