@model Student_info


@{
    ViewData["Title"] = "เพิ่มชื่อนักเรียน";
}


<h1> เพิ่มสมาชิก </h1>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<form asp-controller="Student_info" asp-action="Addstudent" method="post">
    <div class="form-group row">
        <label asp-for="Fname" class="col-2">ชื่อ</label>

        <div class="col-6">
            <input asp-for="Fname" class="form-control">
            <span asp-validation-for="Fname" class="text-danger"></span>

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Lname" class="col-2">นามสกุล</label>

        <div class="col-6">
            <input asp-for="Lname" class="form-control">
            <span asp-validation-for="Lname" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Email" class="col-2">อีเมลล์</label>

        <div class="col-6">
            <input asp-for="Email" class="form-control">
            <span style="margin-left:20px; color:red; font-weight:200"> @TempData["message"] </span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Tel" class="col-2">เบอร์โทรศัพท์</label>

        <div class="col-6">
            <input asp-for="Tel" class="form-control">
            <span asp-validation-for="Tel" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>

        </div>
    </div>

</form>

<form asp-controller="Student_info" asp-action="Back_toHome">
    <button name="submit" type="submit" class="btn btn-primary">Back</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}